<?xml version="1.0"  ?>
<run xsi:noNamespaceSchemaLocation="./excitinginput.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<structure speciespath="../species">
		<unitbox>
			<vect3d>1 0 0</vect3d>
			<vect3d>0 1 0</vect3d>
			<vect3d>0 0 1</vect3d>
		</unitbox>
		<species name="Cu">
			<vect3d>0 0 .5</vect3d>
			<vect3d>0 0 0</vect3d>
			<vect3d>0 0 0</vect3d>
		</species>
		<species name="O">
			<vect3d>0 0 .5</vect3d>
			<vect3d>0 0 0</vect3d>
			<vect3d>0 0 0</vect3d>
		</species>
	</structure>

	<tasks>
		<groundstate fromscratch="true" maxscl="30" solver="arpack"
			mixer="msec">
			<ngkgrit>2 2 2</ngkgrit>
		</groundstate>
		<bandstructure>
			<plot1d>
				<path steps="200">
					<vect3d>0 0 0</vect3d>
					<vect3d>0 1 0</vect3d>
				</path>
			</plot1d>
		</bandstructure>
	</tasks>
</run>
