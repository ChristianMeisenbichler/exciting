
<properties>


  <momentummatrix/> -- important to calculate the momentum matrix elements before first execution

  
  <nlo

    banmin="1"      -- min bands to be included
    banmax="50"     -- max

    delta="0.010"   -- broadening factor 

    dw="0.001"      -- energy step

    emesh="1000"    -- number of energy mesh points

    sc="0.000"      -- "scissors" shift (to correct the KS bandgap)

    tol="0.0001"    -- tolerence factor (to avoid singularities)

    chicomp="1 2 3" -- component of Chi(-2w,w,w) to be calculated

  >
  </nlo>


</properties>
